<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">
    <changeSet id="address" author="Ivan Su">
        <createTable tableName="address">
            <column autoIncrement="true" name="id" type="BIGINT UNSIGNED">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="parent_id" type="BIGINT UNSIGNED" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(32)"/>
        </createTable>
        <createIndex tableName="address" indexName="idx_parent_id">
            <column name="parent_id"/>
        </createIndex>
        <createIndex tableName="address" indexName="idx_name">
            <column name="name"/>
        </createIndex>
    </changeSet>
    
    <changeSet id="address_info" author="Ivan Su">
        <createTable tableName="address_info">
            <column autoIncrement="true" name="id" type="BIGINT UNSIGNED">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="last_area_id" type="BIGINT UNSIGNED" remarks="最后一级地区id" />
            <column name="address_cascade" type="TEXT" remarks="地区级联信息"/>
            <column name="address_area" type="VARCHAR(255)" remarks="所在地区"/>
            <column name="address_detail" type="VARCHAR(255)" remarks="详细地址"/>
            <column defaultValueComputed="current_timestamp()" name="created_at" type="datetime"/>
            <column name="created_by" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>